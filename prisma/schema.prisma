generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model PublicLib {
  id    Int  @map("_id") @id
  title  String
  link  String
  desc String
  photo String @unique
}

model Store_lib {
  id    Int  @map("_id") @id
  title  String
  desc String
  photo String @unique
  summary String
  isbn String
  pageQuant String
  tags String
  width String
  credits Json?
  price Float
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String   @unique
  password String
  token    String?
  isVerified    Boolean
  cart     Cart?    @relation("UserCart")
  createdAt DateTime @default(now())
}

model Cart {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String    @unique @db.ObjectId
  user      User      @relation("UserCart", fields: [userId], references: [id], onDelete: Cascade)
  items    Item[] @relation(name: "CartToItem")
  totalPrice   Float
}

model Item {
  cart    Cart @relation(name: "CartToItem", fields: [cartId], references: [id], onDelete: Cascade)
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  cartId    String @db.ObjectId
  userId    String @db.ObjectId
  name    String @unique
  photo String
  price   Float
  quant    Int
}
